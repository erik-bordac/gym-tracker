<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GymTracker"
             x:Class="GymTracker.App">

	<Application.Resources>
		<Style TargetType="ContentPage">
			<Setter Property="BackgroundColor" Value="#7B8FA1" />
		</Style>
		<Style TargetType="Label">
			<Setter Property="TextColor" Value="#EDEDED" />
		</Style>
		<Style TargetType="Button">
			<Setter Property="TextColor" Value="#f2e9e4" />
			<Setter Property="BackgroundColor" Value="#2D4356" />
		</Style>
	</Application.Resources>
</Application>