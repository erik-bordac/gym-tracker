<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
	 xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	 x:Class="GymTracker.View.RoutinesPage"
	 xmlns:model="clr-namespace:GymTracker.Model"
	 xmlns:viewmodel="clr-namespace:GymTracker.ViewModel"
	 x:DataType="viewmodel:RoutinesPageViewModel"
	 Title="RoutinesPage"
	 BackgroundColor="#7B8FA1">

	<StackLayout>
		<CollectionView ItemsSource="{Binding ExerciseList}">
			<CollectionView.ItemTemplate>
				<DataTemplate x:DataType="model:Exercise">
					<Button Text="{Binding Name}" FontSize="32"/>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
	</StackLayout>
</ContentPage>