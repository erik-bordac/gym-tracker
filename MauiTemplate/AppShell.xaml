<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
		 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		 x:Class="GymTracker.AppShell"
		 xmlns:view="clr-namespace:GymTracker.View"
		 FlyoutBehavior="Flyout"
	   FlyoutBackground="#677888"
		 BackgroundColor="#567189"
		 ForegroundColor="#f2e9e4"
		 TitleColor="#EDEDED">
	<Shell.Resources>
    </Shell.Resources>

	<FlyoutItem Title="Home">
		<ShellContent
			Title="GymTracker"
			ContentTemplate="{DataTemplate view:MainPage}"
			Route="MainPage" />
	</FlyoutItem>
	<FlyoutItem Title="Routines">
		<ShellContent
			Title="GymTracker"
			ContentTemplate="{DataTemplate view:RoutinesPage}"
			Route="RoutinesPage" />
	</FlyoutItem>
	<FlyoutItem Title="Exercises">
		<ShellContent
			Title="GymTracker"
			ContentTemplate="{DataTemplate view:ExercisesPage}"
			Route="ExercisesPage" />
	</FlyoutItem>

</Shell>